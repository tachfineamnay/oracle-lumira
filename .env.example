# ===========================================
# ORACLE LUMIRA - COOLIFY DEPLOYMENT VARIABLES
# ===========================================

# ===========================================
# BUILD VARIABLES (Build Variable = YES)
# ===========================================
VITE_API_BASE_URL=https://api.oraclelumira.com
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_51Ms0j7HY5XvhVZu...
VITE_APP_DOMAIN=https://oraclelumira.com

# ===========================================
# RUNTIME VARIABLES (Build Variable = NO)
# ===========================================

# Application Core
NODE_ENV=production
VITE_APP_NAME=Oracle Lumira
VITE_APP_VERSION=1.0.0
COMMIT_SHA=                                    # Auto-populated by CI/CD

# Server Configuration
PORT=3001                                      # Backend API port
FRONTEND_URL=https://oraclelumira.com          # Frontend base URL for CORS/redirects
API_BASE_URL=https://oraclelumira.com/api      # API base URL for frontend
DESK_HOSTNAME=desk.oraclelumira.com            # Expert desk hostname

# Security & Auth - GENERATE SECURELY IN COOLIFY
JWT_SECRET=REPLACE_WITH_32_PLUS_RANDOM_CHARS_IN_COOLIFY_SECRETS     # REQUIRED: Use crypto.randomBytes(32).toString('hex')
JWT_EXPIRES_IN=7d                                                   # Token expiration
CORS_ORIGIN=https://oraclelumira.com,https://desk.oraclelumira.com  # Allowed origins (comma-separated)
ENABLE_DEBUG_ROUTES=false                                           # NEVER true in production

# Database - CONFIGURE IN COOLIFY SECRETS
MONGODB_URI=REPLACE_WITH_PRODUCTION_MONGODB_URI_IN_COOLIFY         # REQUIRED: mongodb://user:pass@host:port/db
MONGO_ROOT_PASSWORD=REPLACE_WITH_STRONG_MONGO_PASSWORD_IN_COOLIFY   # MongoDB root password for Docker

# Stripe Payments - CONFIGURE IN COOLIFY SECRETS
STRIPE_SECRET_KEY=REPLACE_WITH_LIVE_STRIPE_SECRET_IN_COOLIFY       # sk_live_... for production
STRIPE_WEBHOOK_SECRET=REPLACE_WITH_STRIPE_WEBHOOK_SECRET_IN_COOLIFY # whsec_... from Stripe dashboard
VITE_STRIPE_PUBLIC_KEY=REPLACE_WITH_LIVE_STRIPE_PUBLIC_IN_COOLIFY  # pk_live_... for frontend

# Email Service - CONFIGURE IN COOLIFY IF USED
SENDGRID_API_KEY=REPLACE_WITH_SENDGRID_KEY_IN_COOLIFY_IF_NEEDED     # SG.xxx for transactional emails
FROM_EMAIL=oracle@oraclelumira.com                                  # Sender email address

# Amazon S3 Configuration - CONFIGURE IN COOLIFY SECRETS
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY_IN_COOLIFY           # REQUIRED: AWS access key ID
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY_IN_COOLIFY       # REQUIRED: AWS secret access key
AWS_REGION=eu-west-3                                               # REQUIRED: AWS region (eu-west-3 recommended)
AWS_S3_BUCKET_NAME=lumira-uploads-prod                            # REQUIRED: S3 bucket name
AWS_S3_BASE_URL=                                                   # OPTIONAL: Custom domain for S3 (CloudFront)

# CRM Integration - CONFIGURE IN COOLIFY IF USED
VITE_DOLIBARR_URL=https://crm.oraclelumira.com                      # Dolibarr CRM URL
VITE_DOLIBARR_API_KEY=REPLACE_WITH_DOLIBARR_KEY_IN_COOLIFY_IF_NEEDED # Dolibarr API token

# Automation - CONFIGURE IN COOLIFY IF USED
N8N_WEBHOOK_URL=https://n8n.oraclelumira.com/webhook/lumira-assistant  # n8n webhook URL
N8N_TOKEN=REPLACE_WITH_N8N_TOKEN_IN_COOLIFY_IF_NEEDED                   # n8n authentication token
OPENAI_API_KEY=REPLACE_WITH_OPENAI_KEY_IN_COOLIFY_IF_NEEDED             # sk-... OpenAI API key for AI features

# Performance & Monitoring
LOG_LEVEL=info                                # Logging level: error, warn, info, debug
RATE_LIMIT_WINDOW_MS=900000                   # Rate limiting window (15 minutes)
RATE_LIMIT_MAX_REQUESTS=100                   # Max requests per window

# Development Only (Never use in production)
VITE_API_URL=http://localhost:3001/api        # Local dev API URL
